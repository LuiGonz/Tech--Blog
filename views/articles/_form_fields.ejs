
<div class="form-group mt-4">
  <label class="d-grid d-md-flex justify-content-md-center" for="title"><h4>Title</h4></label>
  <input style="background-color: turquoise; box-shadow: 5px 5px 4px rgba(0,0,0,.6);" required value="<%= article.title %>" type="text" name="title" id="title" class="form-control">
</div>
<div class="form-group mt-4">
  <label class="d-grid d-md-flex justify-content-md-center" for="description"><h4>Description</h4></label>
  <textarea style="background-color: turquoise; box-shadow: 5px 5px 4px rgba(0,0,0,.6);" required name="description" id="description" class="form-control"><%= article.description %></textarea>
</div>
<div class="form-group mt-4">
  <label class="d-grid d-md-flex justify-content-md-center" for="markdown"><h4>Markdown</h4></label>
  <textarea style="background-color: turquoise; box-shadow: 5px 5px 4px rgba(0,0,0,.6);" required name="markdown" id="markdown" class="form-control"><%= article.markdown %></textarea>
</div>
<div class="d-grid d-md-flex justify-content-md-center mt-4 mb-2 gap-3">
  <div>
    <button style="box-shadow: 5px 5px 4px rgba(0,0,0,.6);" type="submit" class="btn btn-success">Save</button>
  </div>
  <div>
    <a style="box-shadow: 5px 5px 4px rgba(0,0,0,.6);" href="/" class="btn btn-warning">Cancel</a>
  </div>
</div>

